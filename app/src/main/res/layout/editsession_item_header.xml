<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_drill"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFooter"
        android:orientation="vertical">

    <TextView
        android:id="@+id/text_session_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Name Goes Here"/>
    <TextView
        android:id="@+id/text_session_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:drawablePadding="4dp"
        tools:text="Linky Goes Here"/>
    <TextView
        android:id="@+id/text_session_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:drawablePadding="4dp"
        tools:text="Date Time Here"/>
    <TextView
        android:id="@+id/text_session_duration"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_timer_black_24dp"
        android:drawablePadding="4dp"
        android:padding="4dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="127dp"
        tools:text="Duration Here" />
</LinearLayout>
</android.support.v7.widget.CardView>
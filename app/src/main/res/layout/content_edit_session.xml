<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.frisbeeworld.drills.EditSessionActivity"
    tools:showIn="@layout/activity_edit_session">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_session_header"
        android:layout_height="wrap_content"
        android:layout_width="344dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="1dp"
        android:layout_marginLeft="2dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="2dp"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_session_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/cardview_dark_background"
                android:textColor="@color/cardview_light_background"
                android:padding="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="DRILL NAME"/>

            <TextView
                android:id="@+id/text_session_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="4dp"
                tools:text="Linky Goes Here"/>
            <TextView
                android:id="@+id/text_session_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="4dp"
                tools:text="Date Time Here"/>
            <TextView
                android:id="@+id/text_session_duration"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:drawablePadding="4dp"
                android:padding="4dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="127dp"
                tools:text="Duration Here" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sessionactivity_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars = "vertical"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/card_session_header"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />


</android.support.constraint.ConstraintLayout>
